package pageObjects;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;

public class LandingPage {
	public WebDriver driver;
	By cartBadge = By.className("shopping_cart_badge");
	By shoppingCart = By.className("shopping_cart_link");
	By productToOrder;
	
	public LandingPage(WebDriver driver) {
		this.driver = driver;
	}
	
	public WebElement getCartBadge() {
		return driver.findElement(cartBadge);
	}
	
	public WebElement getProductToOrder(String product) {
		productToOrder = By.xpath("(//button[contains(@id,'add-to-cart')]//parent::div)/preceding-sibling::div//div[text()='"+product+"']");
		
		
		System.out.println("(//button[contains(@id,'add-to-cart')]//parent::div)//div[text()='"+product+"']");
		return driver.findElement(productToOrder);
	}
	
	public WebElement getShoppingCart() {
		return driver.findElement(shoppingCart);
	}

}
